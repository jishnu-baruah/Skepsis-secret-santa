{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true,
      "baseUrl": "..",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["*.ts"]
  }